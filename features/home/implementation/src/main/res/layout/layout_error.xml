<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout_error_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/layout_error_animation"
        android:layout_width="150dp"
        android:layout_height="150dp"
        app:lottie_enableMergePathsForKitKatAndAbove="true"
        tools:background="@color/red1" />

    <TextView
        android:id="@+id/layout_error_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_regular"
        android:layout_marginEnd="@dimen/margin_regular"
        android:layout_marginBottom="@dimen/margin_regular"
        android:gravity="center"
        android:textAppearance="@style/TextAppearance.Filmatic.Body1"
        tools:text="@string/data_not_found" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/layout_error_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_small"
        tools:text="@string/retry_button" />

</LinearLayout>